<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Taches CRUD</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
    <div class="container">

    <h1>Taches</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Tache</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<tasks.length; i++) {%>

        <tr>
          <td><%= tasks[i].name %></td>
          <td><%= tasks[i].task %></td>
          <td>
            <form method="post" action="/delete/<%= tasks[i]._id %>" style="float:right">
              <input type="submit" name="delete" class="btn btn-danger form-control" value='supprimer' onClick="return confirm('vraiment supprimer ?')" />
            </form>

          </td>
        </tr>
        <% } %>


      </tbody>
    </table>



    <form action="/tasks" method="POST" class="row">
      <div class="form-group col-md-6">
        <label for="name">
          Nom
        </label>
        <input type="text" name="name" class="form-control" required><br>
        <label for="name">
          Tache
        </label>
        <input type="text"  name="task" class="form-control" required><br>
        <button type="submit" class="btn btn-success form-control">Ajouter</button>

      </div>
    </form>

  </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" ></script>
  </body>
</html>
